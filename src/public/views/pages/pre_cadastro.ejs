<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <!-- <header>
        <%- include('../partials/header'); %>
    </header> -->
    <main>
        <div class="container">
            <hr>

            <img src="/images/cadastro.png" class="img-fluid shadow bg-white rounded" width="60%"
                alt="Imagem com vários instrutores de trânsito">

            <hr>
            <form action="/cadastro" method="GET" class="row g-3">

                <div class="col-md-12">
                    <label for="state" class="form-label">Estado</label>
                    <select name="state" id="state" class="form-select" required>
                        <option selected disabled value="">Selecione o Estado</option>
                        <% uf.forEach(item=> { %>
                            <option value="<%= item.nome %>">
                                <%= item.nome %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-primary btn-lg shadow rounded">Continuar</button>
                </div>
            </form>

        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>