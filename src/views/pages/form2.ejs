<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <!-- <header>
        <%- include('../partials/header'); %>
    </header> -->
    <main>
        <div class="container">

            <img src="/images/logo.png" class="img-fluid" alt="CNH na mao logo" width="50%">

            <form action="/submit" method="POST">                

                <div class="mb-3">

                    <label for="name" class="form-label">Nome</label>
                    <input type="text" class="form-control form-control-lg" name="name" id="name"
                        placeholder="nome completo">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control form-control-lg" name="email" id="email"
                        placeholder="email@cnhnamao.com">
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">WhatsApp</label>
                    <input type="text" class="form-control form-control-lg" name="phone" id="phone"
                        placeholder="telefone com WhatsApp">
                </div>

                <div class="mb-3">
                    <label for="cpf" class="form-label">CPF</label>
                    <input type="text" class="form-control form-control-lg" name="cpf" id="cpf"
                        placeholder="número do CPF">
                </div>



                <div class="mb-3">
                    <label for="category" class="form-label">Categoria (Selecione pelo menos uma opção)</label>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="category" id="category" checked>
                        <label class="form-check-label" for="category">
                            "A" - Moto
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="category" id="category">
                        <label class="form-check-label" for="category">
                            "B" - Carro
                        </label>
                    </div>
                </div>



                <div class="mb-3">
                    <label for="vehicle" class="form-label">Veículo (Selecione pelo menos uma opção)</label>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="vehicle" id="vehicle" checked>
                        <label class="form-check-label" for="vehicle">
                            Veículo próprio
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="vehicle" id="vehicle">
                        <label class="form-check-label" for="vehicle">
                            Veículo do aluno
                        </label>
                    </div>

                </div>

                <div class="mb-3">
                    <label>Estado selecionado:</label>
                    <input class="form-control" type="text" name="state"
                        value="<%= cities[0].microrregiao.mesorregiao.UF.nome %>"
                        aria-label="<%= cities[0].microrregiao.mesorregiao.UF.nome %>" readonly>
                </div>

                <div class="mb-3">
                    <a class="btn btn-primary" href="/form1" role="button">Alterar Estado (UF)</a>
                </div>

                <div class="mb-3">
                    <select name="city" id="city" class="form-control">
                        <option value="">Selecione a cidade</option>
                        <% cities.forEach(item=> { %>
                            <option value="<%= item.nome %>">
                                <%= item.nome %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Cadastrar</button>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>