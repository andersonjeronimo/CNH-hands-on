<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <!-- <header>
        <%- include('../partials/header'); %>
    </header> -->
    <main>
        <div class="container">
            <hr>
            <img src="/images/logo-glass-2.png" class="img-fluid" alt="CNH na mao logo com lupa" width="50%">
            <hr>

            <form action="/filtro_instrutores" method="POST" class="row g-3">

                <div class="row g-3 align-items-center">
                    <div class="col-md-5">
                        <label for="city" class="form-label">Cidade</label>
                        <select name="city" id="city" class="form-select" required>
                            <option selected disabled value="">Selecione a cidade</option>
                            <% cities.forEach(item=> { %>
                                <option value="<%= item.nome %>">
                                    <%= item.nome %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label for="email" class="form-label">Estado selecionado</label>
                        <input class="form-control" type="text" name="state" id="state"
                            value="<%= cities[0].microrregiao.mesorregiao.UF.nome %>"
                            aria-label="<%= cities[0].microrregiao.mesorregiao.UF.nome %>" readonly>
                    </div>
                    <div class="col-md-2">
                        <label for="email" class="form-label">Alterar Estado Selecionado</label>
                        <a class="btn btn-primary form-control" href="/pre_cadastro" role="button">Alterar Estado
                            (UF)</a>
                    </div>
                </div>

                <div class="col-6">
                    <label for="category" class="form-label">Categoria</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="<%= category.A %>" name="category"
                            id="category" checked>
                        <label class="form-check-label" for="category">
                            "A" (Moto)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="<%= category.B %>" name="category"
                            id="category">
                        <label class="form-check-label" for="category">
                            "B" (Carro)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="<%= category.AB %>" name="category"
                            id="category">
                        <label class="form-check-label" for="category">
                            "A" e "B" (Carro e moto)
                        </label>
                    </div>
                </div>                

                <hr>

                <div class="col-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="<%= vehicle.Proprio %>" name="vehicle"
                            id="vehicle" checked>
                        <label class="form-check-label" for="vehicle">
                            Veículo próprio
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="<%= vehicle.Aluno %>" name="vehicle"
                            id="vehicle">
                        <label class="form-check-label" for="vehicle">
                            Veículo do aluno
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="<%= vehicle.Ambos %>" name="vehicle"
                            id="vehicle">
                        <label class="form-check-label" for="vehicle">
                            Veículo próprio ou do aluno (a combinar)
                        </label>
                    </div>
                </div>                

                <hr>

                <!-- <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" name="agree" id="agree" required>
                        <label class="form-check-label" for="agree">
                            Li e concordo com os termos e condições
                        </label>
                    </div>
                </div> -->

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-success btn-lg" type="submit">Buscar Instrutor</button>
                </div>
            </form>

        </div>
    </main>
    <hr>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>